<resources>

    <style name="cursive_font">
        <item name="android:fontFamily">"cursive"</item>
    </style>

    <style name="casual_font">
        <item name="android:fontFamily">"casual"</item>
    </style>

    <style name="answers_btn" parent="cursive_font">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">34sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/primary_ocean</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="operator_denominator" parent="cursive_font">>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/primary_ocean</item>
        <item name="android:textSize">158sp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="numerator" parent="operator_denominator">
        <item name="android:gravity">center</item>
    </style>

    <style name="denominator" parent="operator_denominator">
        <item name="android:gravity">center|center_horizontal|center_vertical</item>
    </style>

    <style name="operator" parent="operator_denominator">
        <item name="android:gravity">center|center_horizontal|center_vertical</item>
    </style>

    <style name="play_again_btn">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/primary_ocean</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="operations_dialog">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_weight">1</item>

    </style>


</resources>